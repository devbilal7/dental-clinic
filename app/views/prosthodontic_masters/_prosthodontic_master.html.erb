<div id="<%= dom_id prosthodontic_master %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Prosthodontic code:</strong>
    <%= prosthodontic_master.prosthodontic_code %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Prosthodontic name:</strong>
    <%= prosthodontic_master.prosthodontic_name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this prosthodontic master", prosthodontic_master, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this prosthodontic master', edit_prosthodontic_master_path(prosthodontic_master), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>

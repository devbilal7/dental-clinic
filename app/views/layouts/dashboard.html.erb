<script>
$(document).ready(function(){

  $(window).click(function(event) {
    if(!event.target.classList.contains("drop-down-button")){      
      $(".drop-down-body").hide();
      focus_active_tab();
    }
  })
  $("#account_button").on("click",function(){
    $(".drop-down-button").removeClass("bg-white text-gray-900 focus");
    $("#account_management").toggle();
    $("#account_management_c").hide();
    $("#visit_route").hide();
    $("#account_management_dh").hide();
    $("#DR_list").hide();
  });

  $(".openclose_sidebar").click(function(){
    $("#sidebar,#sidebar_bgcolor,#sidebar_bg").toggle();
  });

  $("#remove_alert").click(function(){
      $("#alert").remove();
    });

  $("#account_button_c").click(function(){
    $(".drop-down-button").removeClass("bg-white text-gray-900 focus");
    $("#account_management").hide();
    $("#account_management_c").toggle();
    $("#visit_route").hide();
    $("#account_management_dh").hide();
    $("#DR_list").hide();
  });

  $("#visit_route_button").click(function(){
    $(".drop-down-button").removeClass("bg-white text-gray-900 focus");
    $("#account_management").hide();
    $("#account_management_c").hide();
    $("#visit_route").toggle();
    $("#account_management_dh").hide();
    $("#DR_list").hide();
  });
  
  $("#account_button_dh").click(function(){
    $(".drop-down-button").removeClass("bg-white text-gray-900 focus");
    $("#account_management").hide();
    $("#account_management_c").hide();
    $("#visit_route").hide();
    $("#account_management_dh").toggle();
    $("#DR_list").hide();
  });

  $("#DR").click(function(){
    $(".drop-down-button").removeClass("bg-white text-gray-900 focus");
    $("#account_management").hide();
    $("#account_management_c").hide();
    $("#visit_route").hide();
    $("#account_management_dh").hide();
    $("#DR_list").toggle();
  });

});
</script>


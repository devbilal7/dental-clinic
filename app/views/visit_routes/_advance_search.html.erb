<div class="w-90 h-full shadow-md bg-white p-8 rounded-xl">
      <span class="remove-popup absolute top-0 right-0 px-4 py-3">
          <svg class="remove-popup fill-current h-6 w-6 text-red-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><title>Close</title><path d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z"/></svg>
      </span>
  <%= form_tag({:controller => "visit_routes", :action => "index"}, {:method => :get, id: "advance-search"}) do %>
    <div class="md:grid md:grid-cols-4 gap-2 mb-5 flex items-center flex-wrap">
          
        <%= t("patient.Patient Number") %>
        <%= search_field_tag :patient_number1, params[:patient_number1], class:"md:col-span-1 mt-1 focus:ring-indigo-500 focus:border-indigo-500 block shadow-sm sm:text-sm border-gray-300 rounded-md clear",placeholder: t("patient.Starting Number")  %>
        <%= search_field_tag :patient_number2, params[:patient_number2], class:"md:col-span-1 mt-1 focus:ring-indigo-500 focus:border-indigo-500 block shadow-sm sm:text-sm border-gray-300 rounded-md clear",placeholder: t("patient.Ending Number") %>
        <div class="col-span-1"></div>

        <%= t("patient.Patient Name") %>
        <%= search_field_tag :patient_name, params[:patient_name], class:"md:col-span-2 mt-1 focus:ring-indigo-500 focus:border-indigo-500 block shadow-sm sm:text-sm border-gray-300 rounded-md clear px-3 py-2",placeholder: t("patient.Search by Patient Name") %>
        <div class="col-span-1"></div>

        <%= t("patient.Visit Route") %>
        <%= select_tag :visit_route, options_for_select((1..10).map{|r|["Visit Route"+r.to_s]},selected: params[:visit_route]), :include_blank => "Select", class:"md:col-span-2 mt-1 focus:ring-indigo-500 focus:border-indigo-500 block shadow-sm sm:text-sm border-gray-300 rounded-md clear px-3 py-2",placeholder: 'Search By Patient Name..' %>
        <div class="col-span-1"></div>

        <%= t("patient.Dr") %>
        <%= select_tag :dr, options_for_select(Dentist.all.map{|r|[r.first_name]},selected: params[:dr]), :include_blank => "Select", class:"md:col-span-2 mt-1 focus:ring-indigo-500 focus:border-indigo-500 block shadow-sm sm:text-sm border-gray-300 rounded-md clear px-3 py-2" %>
        <div class="col-span-1"></div>

        <%= t("patient.Dh") %>
        <%= select_tag :dh, options_for_select(DentistHygienist.all.map{|r|[r.first_name]},selected: params[:dh]), :include_blank => "Select", class:"md:col-span-2 mt-1 focus:ring-indigo-500 focus:border-indigo-500 block shadow-sm sm:text-sm border-gray-300 rounded-md clear px-3 py-2" %>
        <div class="col-span-1"></div>

        <%= label_tag :tc, nil,class: "mt-3 md:col-span-1 block text-sm font-medium text-gray-700" %>
        <%= select_tag :tc, options_for_select(TreatmentCoordinator.all.map{|r|[r.first_name]},selected: params[:tc]), :include_blank => "Select", class:"md:col-span-2 mt-1 focus:ring-indigo-500 focus:border-indigo-500 block shadow-sm sm:text-sm border-gray-300 rounded-md clear px-3 py-2" %>
        <div class="col-span-1"></div>

          <%= t("patient.First Visit") %>
          <div class="relative">
            <%= text_field_tag :first_visit1,"", value: params[:first_visit1], autocomplete: "off",id: "first_visit1-advance", class:"datepicker bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full pr-10 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder:"yyyy/mm/dd" %>
            <div class="flex absolute inset-y-0 right-2 items-center pl-0 pointer-events-none">
              <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path></svg>
            </div>
          </div>
          <div class="relative">
            <%= text_field_tag :first_visit2,"", value: params[:first_visit2], autocomplete: "off",id: "first_visit2-advance", class:"datepicker bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full pr-10 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder:"yyyy/mm/dd" %>
            <div class="flex absolute inset-y-0 right-2 items-center pl-0 pointer-events-none">
              <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path></svg>
            </div>
          </div>
          <div class="col-span-1"></div>
            
          <%= t("monthly.Last Visit") %>
          <div class="relative">
            <%= text_field_tag :second_reservation1,"", value: params[:second_reservation1], autocomplete: "off",id: "next_reservation1-advance", class:"datepicker bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full pr-10 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder:"yyyy/mm/dd" %>
            <div class="flex absolute inset-y-0 right-2 items-center pl-0 pointer-events-none">
              <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path></svg>
            </div>
          </div>
          <div class="relative">
            <%= text_field_tag :second_reservation2,"", value: params[:second_reservation2], autocomplete: "off",id: "next_reservation2-advance", class:"datepicker bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full pr-10 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder:"yyyy/mm/dd" %>
            <div class="flex absolute inset-y-0 right-2 items-center pl-0 pointer-events-none">
              <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path></svg>
            </div>
          </div>          
          <div class="col-span-1"></div>

          <%= t("monthly.Treatment Plan") %>
          <div class="relative">
            <%= text_field_tag :treatment1,"", value: params[:treatment1], autocomplete: "off", id: "last_visit1-advance", class:"datepicker bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full pr-10 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder:"yyyy/mm/dd" %>
            <div class="flex absolute inset-y-0 right-2 items-center pl-0 pointer-events-none">
              <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path></svg>
            </div>
          </div>
          <div class="relative">
            <%= text_field_tag :treatment2,"", value: params[:treatment2], autocomplete: "off",id: "last_visit2-advance", class:"datepicker bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full pr-10 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder:"yyyy/mm/dd" %>
            <div class="flex absolute inset-y-0 right-2 items-center pl-0 pointer-events-none">
              <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path></svg>
            </div>
          </div>
    </div>
  <% end %>
  <div class="px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
    <button type="button" id="advance-search-button" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-green-600 text-base font-medium text-black hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 sm:ml-3 sm:w-auto sm:text-sm"><%= t("patient.Search") %></button>
    <button type="button" id="clear" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-red-600 text-base font-medium text-black hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 sm:ml-3 sm:w-auto sm:text-sm"><%= t("patient.Clear") %></button>
  </div>
</div>
<script>
  $(".remove-popup").click(() => {
    $('#advance-search-popup').removeClass("showPopUp");
  })
</script>

<%= form_tag({:controller => "visit_routes", :action => "index"}, {:method => :get}) do %>
  <div class="flex">
    <div class="md:grid-cols-8 flex-1">
         <fieldset class="border-solid border-gray-300 rounded p-5 mt-3 mb-6 bg-green-100 rounded-lg mr-6 w-fit">
         <legend class="text-sm text-black text-bold text-md rounded-md rounded-full border-2 border-green px-8 py-1 h-8 bg-green-100"><%= t("patient.Search Conditions") %></legend>

         <div class="grid grid-cols-5 gap-3">
  
         <div class=" col-span-4">
         <div class="md:grid md:grid-cols-10 gap-2" style="grid-template-columns: auto 1fr 1fr 0fr 0fr 1fr 0fr auto 1fr 1fr;" >         
         <%= label_tag t("monthly.Patient Number"), nil,class: "mt-3 md:col-span-1 block text-sm font-medium text-gray-700" %>
         <%= search_field_tag :patient_number1, "",value: params[:patient_number1], tabindex: "1", class:"w-full md:col-span-1 mt-1 focus:ring-indigo-500 focus:border-indigo-500 block shadow-sm sm:text-sm border-gray-300 rounded-md",placeholder: t("monthly.Starting Number") %>
         <%= search_field_tag :patient_number2, "",value: params[:patient_number2], tabindex: "2", class:"w-full md:col-span-1 mt-1 focus:ring-indigo-500 focus:border-indigo-500 block shadow-sm sm:text-sm border-gray-300 rounded-md",placeholder: t("monthly.Ending Number") %>
         
         <div class="col-span-1"></div>
         <%= label_tag "DR", nil,class: "mt-3 md:col-span-1 text-sm font-medium text-gray-700" %>
         <%= select_tag(:dr, options_for_select(Dentist.all.map{|r|[r.first_name]},selected: params[:dr]),prompt: "選択する", tabindex: "5", class:"w-full md:col-span-2 mt-1 focus:ring-indigo-500 focus:border-indigo-500 shadow-sm sm:text-sm border-gray-300 rounded-md text-center") %>

         <%= label_tag t("monthly.First Visit"), nil,class: "mt-3 md:col-span-1 block text-sm font-medium text-gray-700 text-center " %>
          <div class="relative">
            <%= text_field_tag :first_visit1,"", value: params[:first_visit1], autocomplete: "off", tabindex: "8", class:" w-full datepicker bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full pr-10 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder:"yyyy/mm/dd" %>
            <div class="flex absolute inset-y-0 right-2 items-center pl-0 pointer-events-none">
              <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path></svg>
            </div>
          </div>
          <div class="relative">
            <%= text_field_tag :first_visit2,"", value: params[:first_visit2], autocomplete: "off", tabindex: "9", class:"w-full datepicker bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full pr-10 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder:"yyyy/mm/dd" %>
            <div class="flex absolute inset-y-0 right-2 items-center pl-0 pointer-events-none">
              <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path></svg>
            </div>
          </div>
         
        
         <%= label_tag t("monthly.Patient Name"), nil,class: "mt-3 md:col-span-1 block text-sm font-medium text-gray-700" %>
         <%= search_field_tag :patient_name, "",value: params[:patient_name], tabindex: "3", class:"w-full md:col-span-2 mt-1 focus:ring-indigo-500 focus:border-indigo-500 block shadow-sm sm:text-sm border-gray-300 rounded-md",placeholder: t("monthly.Search by Patient Name") %>

         <div class="col-span-1"></div>
         <%= label_tag "DH", nil,class: "mt-3 md:col-span-1 block text-sm font-medium text-gray-700" %>
         <%= select_tag(:dh, options_for_select(DentistHygienist.all.map{|r|[r.first_name]},selected: params[:dh]),prompt: "選択する", tabindex: "6", class:"w-full md:col-span-2 mt-1 focus:ring-indigo-500 focus:border-indigo-500 block shadow-sm sm:text-sm border-gray-300 rounded-md text-center") %>

         <%= label_tag t("monthly.Last Visit"), nil,class: "mt-3 md:col-span-1 block text-sm font-medium text-gray-700 text-center" %>
          <div class="relative">
            <%= text_field_tag :second_reservation1,"", value: params[:second_reservation1], autocomplete: "off", tabindex: "10", class:"w-full datepicker bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full pr-10 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder:"yyyy/mm/dd" %>
            <div class="flex absolute inset-y-0 right-2 items-center pl-0 pointer-events-none">
              <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path></svg>
            </div>
          </div>
          <div class="relative">
            <%= text_field_tag :second_reservation2,"", value: params[:second_reservation2], autocomplete: "off", tabindex: "11", class:"w-full datepicker bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full pr-10 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder:"yyyy/mm/dd" %>
            <div class="flex absolute inset-y-0 right-2 items-center pl-0 pointer-events-none">
              <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path></svg>
            </div>
          </div>
         
         <%= label_tag t("monthly.Visit Route"), nil,class: "mt-3 md:col-span-1 block text-sm font-medium text-gray-700" %>
         <%= select_tag(:visit_route, options_for_select(VisitRouteMaster.all.map{|r|[r.visit_route_name]},selected: params[:visit_route]),prompt: "選択する", tabindex: "4", class:"w-full md:col-span-2 mt-1 focus:ring-indigo-500 focus:border-indigo-500 block shadow-sm sm:text-sm border-gray-300 rounded-md text-center") %>
         <div class="col-span-1"></div>
        
         <%= label_tag "TC", nil,class: "mt-3 md:col-span-1 block text-sm font-medium text-gray-700" %>
         <%= select_tag(:tc, options_for_select(TreatmentCoordinator.all.map{|r|[r.first_name]},selected: params[:tc]),prompt: "選択する", tabindex: "7", class:"md:col-span-2 mt-1 focus:ring-indigo-500 focus:border-indigo-500 block shadow-sm sm:text-sm border-gray-300 rounded-md text-center w-full ") %>
        
         <%= label_tag t("monthly.Treatment Plan"), nil,class: "mt-3 md:col-span-1 block text-sm font-medium text-gray-700 text-center" %>
          <div class="relative">
            <%= text_field_tag :treatment1,"", value: params[:treatment1], autocomplete: "off", tabindex: "12", class:"datepicker bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full pr-10 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 w-full", placeholder:"yyyy/mm/dd" %>
            <div class="flex absolute inset-y-0 right-2 items-center pl-0 pointer-events-none">
              <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path></svg>
            </div>
          </div>
          <div class="relative">
            <%= text_field_tag :treatment2,"", value: params[:treatment2], autocomplete: "off", tabindex: "13", class:"datepicker bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full pr-10 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 w-full ", placeholder:"yyyy/mm/dd" %>
            <div class="flex absolute inset-y-0 right-2 items-center pl-0 pointer-events-none">
              <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path></svg>
            </div>
          </div>
         
       </div>
         </div>
         <div class="pdf-button">
         <%= link_to "帳票出力", visit_routes_path(format: "pdf"), class: "float-right w-fit px-4 py-1 col-span-1 active items-center text-center border-2 border-transparent font-small rounded-md shadow-xl text-white bg-green-500 hover:bg-green-700" if params[:action] == "index" %>
          <div class="flex">
          <div class="col-span-5 w-full mt-28  flex gap-4">
           <%= submit_tag(t("monthly.Search"), :id=>"button", tabindex: "14", :class=>"cursor-pointer active float-right ml-14 items-center px-5 h-10 py-1 border border-transparent  font-small rounded-md shadow-xl text-white bg-green-500 hover:bg-green-500", :name=>"submit") %>
           <%= link_to t("monthly.Reset"), visit_routes_path, tabindex: "15", class: "active float-right items-center text-center py-1 px-3 border-2 h-10 border-transparent  font-small rounded-md shadow-xl text-white bg-red-500 hover:bg-red-700 whitespace-nowrap"%>
          </div>     
         </div>
        </div>
       </div>     
         </fieldset>
     </div>
<% end %>
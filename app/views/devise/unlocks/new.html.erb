<h2 class="mt-6 text-3xl font-extrabold text-gray-900 text-center">Resend unlock instructions</h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class:"space-y-6 rounded-md shadow px-5 py-5" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class:"text-sm font-medium text-gray-700" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div class="actions">
    <%= f.submit "Resend unlock instructions",class:"font-medium text-indigo-600 hover:text-indigo-500" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
